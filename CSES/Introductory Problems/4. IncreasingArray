#include <bits/stdc++.h>
using namespace std;

int main(){
    long long n,movecount = 0;
    cin >>n;
    long long A[n];
    for(int i =0; i < n; ++i){
        cin >> A[i];
    }
    for(int i = 0; i < n-1; ++i){
        if(A[i] > A[i+1]){
            movecount += A[i] - A[i+1];
            A[i+1] = A[i];
        }
    }
    cout << movecount << endl;
}
